<% layout('layouts/boilerplate',) %>
<div class="row">
  <div class="col-sm-10 offset-sm-1 col-md-6 offset-md-3">
    <div class="card shadow mb-5">
      <div class="card-body">
        <h3 class="card-title text-center">Edit Campground</h3>
        <form
          action="/campgrounds/<%= campground._id %>?_method=PUT"
          method="POST"
          novalidate
          class="needs-validation"
          enctype="multipart/form-data"
        >
          <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input
              class="form-control"
              type="text"
              id="title"
              name="campground[title]"
              placeholder="Title"
              value="<%= campground.title %>"
              required
            />
          </div>
          <div class="mb-3">
            <label class="form-label" for="location">Location</label>
            <input
              class="form-control"
              type="text"
              id="location"
              name="campground[location]"
              placeholder="Location"
              value="<%= campground.location %>"
              required
            />
          </div>
          <div class="col-auto mb-3">
            <label class="form-label" for="price">Price</label>
            <div class="input-group">
              <div class="input-group-text">$</div>
              <input
                name="campground[price]"
                type="text"
                class="form-control"
                id="price"
                placeholder="0.00"
                value="<%= campground.price %>"
                required
              />
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <textarea
              class="form-control"
              type="text"
              id="description"
              name="campground[description]"
              placeholder="Description"
              required
            >
<%= campground.description %> 
        </textarea
            >
          </div>
          <!-- Modal -->
          <div
            class="modal fade"
            id="imgModal"
            tabindex="-1"
            aria-labelledby="imageModalLabel"
            aria-hidden="true"
          >
            <div class="modal-dialog modal-dialog-scrollable modal-lg">
              <div class="modal-content">
                <div class="modal-header">
                  <h2 class="modal-title fs-5 text-center" id="imageModalLabel">
                    Manage Images
                  </h2>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>
                <div class="modal-body">
                  <div class="container text-center">
                    <div class="row row-cols-sm-1 row-cols-lg-3">
                      <% campground.image.forEach((img,i) => { %>
                      <div class="col mb-3">
                        <div class="card px-0" style="width: 15rem">
                          <img
                            src="<%=img.thumbnail%>"
                            class="card-img-top h-100"
                          />
                          <div class="card-body py-2">
                            <input
                              class="form-check-input"
                              type="checkbox"
                              id="image-<%=i%>"
                              name="deleteImages[]"
                              value="<%= img.filename %>"
                            />
                          </div>
                        </div>
                      </div>
                      <% }) %>
                    </div>
                  </div>
                  <div class="mb-3">
                    <label for="formFileMultiple" class="form-label"
                      >Upload More Image</label
                    >
                    <input
                      class="form-control"
                      type="file"
                      id="formFileMultiple"
                      multiple
                      name="image"
                    />
                  </div>
                </div>
                <div class="modal-footer">
                  <button
                    type="button"
                    class="btn btn-primary"
                    data-bs-dismiss="modal"
                  >
                    Done
                  </button>
                </div>
              </div>
            </div>
          </div>

          <div class="d-grid gap-2 d-sm-flex justify-content-sm-start">
            <button class="btn btn-success">Save Campground</button>
            <a href="/campgrounds/<%= campground._id %>" class="btn btn-info"
              >Back</a
            >
          </div>
          <div class="d-grid gap-2 d-sm-flex justify-content-sm-start mt-2">
            <a href="/campgrounds" class="btn btn-info">All Campgrounds</a>
            <!-- Button trigger modal -->
            <button
              type="button"
              class="btn btn-primary"
              data-bs-toggle="modal"
              data-bs-target="#imgModal"
            >
              Manage Image Gallery
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
